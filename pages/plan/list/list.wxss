/* pages/plan/list/list.wxss */
@import "../../../lib/mycss/plan";
@import "../../../lib/mycss/common";

.search {
  margin: 20rpx 10rpx 0 10rpx;
  padding: 10rpx 0;
  display: flex;
}

.search-input {
  flex: 3;
  height: 70rpx;
  float: left;
  border: 1rpx solid #d8d8d8;
  padding: 0 20rpx;
}

.phcolor {
  color: #acacac;
}

.search-btn {
  flex: 1;
  height: 74rpx;
  float: left;
  border: 1rpx solid #408ee2;
  border-radius: 10rpx;
  line-height: 70rpx;
  text-align: center;
  margin-left: 10rpx;
}

.search-title {
  width: 100%;
  font-size: 30rpx;
  color: #408ee2;
  text-align: center;
}
