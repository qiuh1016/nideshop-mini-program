/* pages/plan/canvas/canvas.wxss */
@import "../../../lib/mycss/common.wxss";

canvas {
  position: absolute;
  /* width: 1500rpx;
  height: 1500rpx; */
  top: 1500rpx;
  left: 1500rpx;
  z-index: -999;
  opacity: 0;
}

.img-container {
  width: 750rpx;
  height: 750rpx;
  border: 1rpx solid #c9c9c9;
  overflow: hidden;
  position: relative;
  /* background: green; */
}

.img-container .img {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
}

.img-selected {
  /* border: 1rpx solid #408EE2; */
  box-shadow: 2rpx 5rpx 5rpx 5rpx #aaa;
}

.action-bar {
  position: absolute;
  width: 130rpx;
  top: 66rpx;
  left: 0rpx;
  background: #fff;
  padding: 0 15rpx 15rpx 15rpx;
  z-index: 9999;
  border: 1rpx solid #a5a5a5;
}

.action-bar-item {
  width: 100rpx;
  height: 100rpx;
  /* height: 120rpx; */
  /* background: red; */
  margin-top: 20rpx; 
}

.action-bar-item-icon {
  width: 100rpx;
  height: 100rpx;
  /* margin-left: 10rpx; */
}

.action-bar-item-text {
  width: 100rpx;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
}

.action-bar-show {
  animation: actionmoveout 0.7s;
  -moz-animation: actionmoveout 0.7s;
  -webkit-animation: actionmoveout 0.7s;
  -o-animation: actionmoveout 0.7s;
}

@keyframes actionmoveout {
  from {left: -100rpx;}
  to {left: 0rpx;}
}

.bottom-control {
  position: absolute;
  bottom: 110rpx;
  left: 10rpx;
  right: 10rpx;
}

.good-container {
  width: 540rpx;
  height: 180rpx;
  /* background: blue; */
  float: left;
  margin-left: 10rpx;
  white-space: nowrap;
  display: block;
  margin-bottom: 20rpx;
}

.good-thumbnail {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  display: inline-block;
  position: relative;
  /* background: yellow; */
}

.good-thumbnail .img {
  width: 180rpx;
  height: 180rpx;
}

.good-thumbnail .btn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 0;
  top: 0;
}

.good-thumbnail .btn .remove {
  width: 40rpx;
  height: 40rpx;
}

.add-btn {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 10rpx;
  float: left;
  padding: 25rpx;
  border: 1rpx solid #a5a5a5;
  border-radius: 10rpx;
}

