/* pages/plan/canvas/canvas.wxss */
@import "../../../lib/mycss/common.wxss";

canvas {
  position: absolute;
  /* width: 1500rpx;
  height: 1500rpx; */
  top: 0;
  left: 0;
  z-index: -1;
  opacity: 0;
}

.img-container {
  width: 750rpx;
  height: 750rpx;
  border: 1rpx solid #c9c9c9;
  overflow: hidden;
  /* background: green; */
}

.img-container .img {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
}

.bottom-control {
  position: absolute;
  bottom: 110rpx;
  left: 10rpx;
  right: 10rpx;
}

.good-container {
  width: 540rpx;
  height: 180rpx;
  /* background: blue; */
  float: left;
  margin-left: 10rpx;
  white-space: nowrap;
  display: block;
  margin-bottom: 20rpx;
}

.good-thumbnail {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  /* background: yellow; */
}

.add-btn {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 10rpx;
  float: left;
  padding: 25rpx;
  border: 1rpx solid #a5a5a5;
  border-radius: 10rpx;
}

